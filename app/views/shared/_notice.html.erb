<% if flash.present? %>
  <div class="card">
    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert" >
        <p><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert" >
        <p><%= raw(sanitize(alert).gsub($RS, '<br />')) %></p>
        <%# TODO: santitize xss対策, gsub 置換 %>
      </div>
    <% end %>
  </div>
<% end%>