.container
  h1 = @level.name

  - @questions.each do |question|
    = link_to edit_admin_ruby_level_question_path(@level, question) do
      .row.container
        .col-md-6.form-control.mt-3.hover_scale.hover_border
          = question.question_num
          = question.title

  .row
    .col-md-5.mt-4#ruby
      = paginate @questions, theme: "bootstrap"
    .col-md-4.mt-4
      = link_to 'Back', admin_ruby_levels_path



