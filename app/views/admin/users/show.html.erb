<div class="container">

  <div class="nav justify-content-center">
    <%= link_to "Back", admin_users_path, :class => "nav-link active" %>
  <div>
  <table class="table table-hover table-dark">
    <tbody>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:id) %></th>
        <td><%= user.id %></td>
      </tr>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:name) %></th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:email) %></th>
        <td><%= user.email %></td>
      </tr>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:admin) %></th>
        <td><%= user.admin? ? "あり": "なし" %></td>
      </tr>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:created_at) %></th>
        <td><%= user.created_at %></td>
      </tr>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:updated_at) %></th>
        <td><%= user.updated_at %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to '編集', edit_admin_user_path, :class => "btn btn-primary" %>
  <%= link_to '削除', [:admin, @user], method: :delete,
              data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
</div>