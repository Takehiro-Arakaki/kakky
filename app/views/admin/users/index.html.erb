<div class="container">
  <h1>Users</h1>

  <% link_to '新規登録', new_admin_user_path, :class => "btn btn-primary" %>
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th scope="col" ><%= User.human_attribute_name(:name) %></th>
        <th scope="col" ><%= User.human_attribute_name(:email) %></th>
        <th scope="col" ><%= User.human_attribute_name(:admin) %></th>
        <th scope="col" ><%= User.human_attribute_name(:created_at) %></th>
        <th scope="col" ><%= User.human_attribute_name(:updated_at) %></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, [:admin, user] %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? "あり": "なし" %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user), :class => "btn btn-primary" %>
              <%= link_to 'Destroy', [:admin, user], method: :delete,
                  data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_admin_user_path %>
</div>