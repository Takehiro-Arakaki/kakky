<%= form_with(model: [:admin, @user], local: true) do |form| %>

  <%= render "shared/notice" %>

    <div class="form-group">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "メールアドレス" %>
      <%= form.text_field :email, :class => "form-control" %>
    </div>

    <div class="form-check form-group">
      <%= form.label :admin, "管理者権限", :class => "form-check-label" %>
      <%= form.check_box :admin, :class => "form-check-input", :type => "checkbox" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "パスワード" %>
      <%= form.text_field :password, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "パスワード(確認)" %>
      <%= form.text_field :password_confirmation, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "登録する", :class => "btn btn-primary"%>
    </div>

<% end %>
